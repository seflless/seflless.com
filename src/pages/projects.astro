---
import BaseLayout from "@/layouts/BaseLayout.astro";

const projects = [
  {
    title: "Humongous Cursors",
    description: "Scale your cursor from tiny to humongous.",
    href: "/project/humongous-cursors",
    image: "/projects/humongous-cursors.png",
    internal: true,
  },
  {
    title: "This Blog",
    description: "Built with Astro, React, and Tailwind.",
    href: "https://github.com/francoislaberge/blog",
  },
];
---

<BaseLayout title="Projects - Francois Laberge" favicon="ðŸ§ª">
  <div class="space-y-6">
    <h1 class="text-3xl font-bold tracking-tight">Projects</h1>
    <p class="text-muted-foreground">Things I've built or am working on.</p>

    <div class="grid grid-cols-2 gap-4">
      {projects.map((project) => (
        <a
          href={project.href}
          target={project.internal ? undefined : "_blank"}
          rel={project.internal ? undefined : "noopener noreferrer"}
          class="group block relative aspect-square rounded-xl overflow-hidden bg-muted"
        >
          {project.image ? (
            <img
              src={project.image}
              alt={project.title}
              class="absolute inset-0 w-full h-full object-cover group-hover:scale-105"
              style="transition: transform 500ms cubic-bezier(0.34, 1.56, 0.64, 1);"
            />
          ) : (
            <div class="absolute inset-0 bg-gradient-to-br from-muted-foreground/20 to-muted-foreground/5" />
          )}
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent" />
          <div class="absolute bottom-0 left-0 right-0 p-4">
            <h2 class="text-white font-semibold text-lg leading-tight">{project.title}</h2>
            <p class="text-white/70 text-sm mt-1">{project.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
